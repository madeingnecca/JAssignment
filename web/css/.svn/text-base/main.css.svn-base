/* Main */
body {
	font-family:Arial, Helvetica, sans-serif;
	font-size: 0.8em;
	margin: 0px;
	padding: 0px;
	width: 99%;
	height: 100%;
}

body td, body table, body tr {
	font-family:Arial, Helvetica, sans-serif;
	font-size: 1em;
}

img {
	border:0px;
}

a {
	color:#9a0040;
	text-decoration:none;
}

a:hover {
	text-decoration:underline;
}

a:active {
	background-color:#666666;
}

.neretto {
	font-weight:bold;
}

.current {
	background-color:#CCCCCC;
}

.current_scuro {
	background-color:#000000; 
	/* font-weight: bold; */
}

.world {
	list-style-image: url(/images2/link_ext.gif);
}

.margine {
	margin-left: 4px;
	margin-right: 4px;
}

.margine p,.margine h1, .margine h2, .margine h3, .margine ul, .margine table {
	margin-left: 0px;
	margin-right: 0px;
}

.bottone {
	border: 1px solid #000000;
	border-top-color:#999999;
	border-left-color:#999999;
	padding: 2px 5px;
	font-family: "Arial", Courier, monospace;
	background-color:#EEEEEE;
	color: #000000;
	font-size: 12px;
	text-align: center;
	text-decoration: none;
	font-weight:normal;
	height: 21px;
	vertical-align: middle;
}


form {
	margin: 0px;
	padding: 0px;
}

p {
	margin: 2px 3px 4px 3px; 
}

ul {
	margin: 3px;
	list-style-type: disc;
	/* list-style-image: url(/images2/arrow9.gif); */ 
	/* list-style-position: outside; */
	padding-left: 1.6em;
	padding-bottom: 0.4em;
}

h4 {
	font-size: 110%;
	margin-top: 0px;
	margin-bottom: 0px;
}

blockquote {
	margin-top: 4px;
}

.rientrato {
	margin-left: 3em !important;
}

.staccato {
	margin-top: 2em !important;
}

/* Stili per le tabelle */
.tbfina {
	padding: 0px;
	margin: 0px;
	border:hidden;
	border-collapse:collapse;
	border: 1px solid #000000;
}

.tbfina td, .tbfina th  {
	border: 1px solid #000000;
	padding: 2px 4px;
	margin: 0px;
	border-collapse:collapse;
	vertical-align: top;
}

.tbfina th {
	color: #FFFFFF;
	background-color:#9a0040;
	font-weight: bold;
}


.tbrighe {
	border-collapse:collapse;
}

.tbrighe th {
	color: #FFFFFF;
	background-color:#9a0040;
	font-weight: bold;
}

.tbrighe td {
	vertical-align: top;
	border-bottom: 1px solid #9a0040;
	border-left-style: none;
	border-right-style: none;
	padding: 2px;
}

.selettore {
	width:100%; 
	font-size:80%; 
	margin-top:4px;
	overflow: auto;
}
