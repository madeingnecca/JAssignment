<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>help_conf_xml</param-name>
        <param-value>/help/help.xml</param-value>
    </context-param>
    <context-param>
        <param-name>help_conf_xsl</param-name>
        <param-value>/help/showhelp.xsl</param-value>
    </context-param>
    <context-param>
        <param-name>test_slot_count</param-name>
        <param-value>3</param-value>
    </context-param>
    <context-param>
        <param-name>mail_conf_xml</param-name>
        <param-value>/WEB-INF/classes/controller/mail/mailconf.xml</param-value>
    </context-param>
    <context-param>
        <param-name>jaas_conf_file</param-name>
        <param-value>/WEB-INF/classes/controller/auth/kerberos/jaas.conf</param-value>
    </context-param>
    <context-param>
        <param-name>authenticator_class</param-name>
        <param-value>controller.auth.LocalAuth</param-value>
    </context-param>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>detail</param-name>
            <param-value>2</param-value>
        </init-param>
        <init-param>
            <param-name>locale</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>application</param-name>
            <param-value>applicationResource</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Connector</servlet-name>
        <servlet-class>
          net.fckeditor.connector.ConnectorServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Dispatcher</servlet-name>
        <servlet-class>controller.Dispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvaDAO</servlet-name>
        <servlet-class>controller.ProvaDAO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProvaHib</servlet-name>
        <servlet-class>controller.ProvaHib</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>controller.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>controller.servlets.AuxfileManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSourceServlet</servlet-name>
        <servlet-class>controller.servlets.ViewSourceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HelpServlet</servlet-name>
        <servlet-class>controller.servlets.HelpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VoidResultServlet</servlet-name>
        <servlet-class>controller.servlets.VoidResultServlet</servlet-class>
    </servlet>
    <servlet><servlet-name>ServletAdaptor</servlet-name><servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class><load-on-startup>1</load-on-startup></servlet><servlet-mapping>
        <servlet-name>ProvaDAO</servlet-name>
        <url-pattern>/ProvaDAO</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProvaHib</servlet-name>
        <url-pattern>/ProvaHib</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dispatcher</servlet-name>
        <url-pattern>/Dispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>Connector</servlet-name>
      <url-pattern>
        /fckeditor/editor/filemanager/connectors/*
      </url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/admin/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/admin/UploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSourceServlet</servlet-name>
        <url-pattern>/admin/ViewSourceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HelpServlet</servlet-name>
        <url-pattern>/admin/HelpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VoidResultServlet</servlet-name>
        <url-pattern>/admin/VoidResultServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
